@model ProductManagementMVC.Models.EntityFramework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/lodingpage.css" rel="stylesheet" />
    
</head>
<body>
    <div class="login-page">
        <div class="form">
            <div>
                <p class="message">LÜTFEN GİRİŞ YAPINIZ </p>
                <p class="message"></p>

            </div>

            @using (Html.BeginForm("Login", "Security", FormMethod.Post))
            {

                <div>

                    @Html.TextBoxFor(m => m.Ad, new { @placeholder = "Kullanıcı Adı" })
                </div>
                <div>

                    @Html.PasswordFor(m => m.Sifre, new { @placeholder = "Parola" })
                </div>
                <button type="submit">Giriş Yap</button>
            }
            <div>
                <p class="message"></p>
                <p class="message1">@ViewBag.Mesaj</p>

            </div>
        </div>
    </div>
</body>
</html>


